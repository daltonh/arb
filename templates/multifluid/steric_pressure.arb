# here we define a steric pressure <Pi_steric_s> based on <phi_s>

CONSTANT <phi_steric_on> 0.64d0
CONSTANT <phi_steric_gamma_2> 1.d+5 # quite relaxed parameters
CONSTANT <phi_steric_gamma_3> 0.03d0
CELL_DERIVED <Pi_steric_s> [Pa] "cellif(<phi_steric_on>-<phi_s>,0.d0,cellif(<phi_steric_on>+<phi_steric_gamma_2>-<phi_s>,<phi_steric_gamma_2>*(<phi_s>-<phi_steric_on>)^2/(2.d0*<phi_steric_gamma_3>),<phi_steric_gamma_2>*(<phi_s>-<phi_steric_on>-<phi_steric_gamma_3>/2.d0)))" ON <all cells>
