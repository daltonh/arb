MARKDOWN
Here we create a better estimate of the correction velocity, using ingredients however from the navier_stokes u_f file, done with replacements
END_MARKDOWN

# first compile the local summary variables, A and D
# add bits in sections
#FACE_LOCAL <u_f_{correction}_A_<<species>>> '-<C_{Rhie-Chow}>*<p_error_<<species>>>' ON <allfaces>
FACE_LOCAL <u_f_{correction}_A_<<species>>> '<C_{Rhie-Chow}>*<delta_dynamic_force_f_<<species>>>' ON <allfaces>
FACE_LOCAL <u_f_{correction}_D_<<species>>> '<u_rf_{vis}_<<species>>>' ON <allfaces>
<<navierstokescomment>>FACE_LOCAL <u_f_{correction}_D_<<species>>> '<u_f_{correction}_D_<<species>>>+<u_rf_{adv}_<<species>>>' ON <allfaces>
<<transientnavierstokescomment>>FACE_LOCAL <u_f_{correction}_A_<<species>>> '<u_f_{correction}_A_<<species>>>+<u_rf_{transient}_<<species>>>*<phiu_f_{correction}_<<species>>[r=1]>*<phi_f_bounded_adjacent_<<species>>>/<phi_f_lim_adjacent_<<species>>[r=1]>' ON <allfaces>
#<<transientnavierstokescomment>>FACE_LOCAL <u_f_{correction}_A_<<species>>> '<u_f_{correction}_A_<<species>>>+<u_rf_{transient}_<<species>>>*<phiu_f_{correction}_<<species>>[r=1]>' ON <allfaces>
<<transientnavierstokescomment>>FACE_LOCAL <u_f_{correction}_D_<<species>>> '<u_f_{correction}_D_<<species>>>+<u_rf_{transient}_<<species>>>' ON <allfaces>

IF 1 # add on drag contribution
  {{
    my $return_string='';
    if (string_test('<<species>>','species0')) {
      for my $species (string_eval('<<multifluid_disperse_species_list>>','list')) {
        $return_string .= "VARIABLE <u_f_{correction}_D_<<species>>> '<u_f_{correction}_D_<<species>>>+<beta*j_<<species>>_$species>'\n";
      }
    } else {
      $return_string .= "VARIABLE <u_f_{correction}_D_<<species>>> '<u_f_{correction}_D_<<species>>>+<beta*j_<<species>>_species0>'\n";
    }
    return $return_string;
  }}
END_IF
  
{{ print "DEBUG: in single_species_u_f:\n"; print string_debug(); }}

# now cancel the previous correction velocities so that they can be calculated in the correct order
VARIABLE <phiu_f_{correction}_<<species>>> CANCEL # need to reposition these variables later in the file
VARIABLE <phiu_f_<<species>>> CANCEL

{{
  my $return_string='';
  if (string_test('<<species>>','species0')) {
    my $top = "<u_f_{correction}_A_species0>";
    my $bottom = "<u_f_{correction}_D_species0>";
    for my $i (string_eval('<<multifluid_disperse_species_list>>','list')) {
      $top .= "+<beta*i_f_species0_$i>*<u_f_{correction}_A_$i>/<u_f_{correction}_D_$i>";
      $bottom .= "-<beta*i_f_species0_$i>*<beta*i_f_$i"."_species0>/<u_f_{correction}_D_$i>";
    }
    $return_string .= "FACE_DERIVED <phiu_f_{correction}_species0> '($top)/($bottom)' ON <domainfaces>\n";
  } else {
    $return_string .= "FACE_DERIVED <phiu_f_{correction}_<<species>>> '(<u_f_{correction}_A_<<species>>>+<beta*i_f_<<species>>_species0>*<phiu_f_{correction}_species0>)/<u_f_{correction}_D_<<species>>>' ON <domainfaces>\n";
  }
  return $return_string;
}}
