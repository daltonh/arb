MARKDOWN
Include the weight body force in each of the equations, similar to the vof template
END_MARKDOWN

{{
  my $return_string = '';
  for my $species (string_eval('<<multifluid_species_list>>','list')) {
    for my $l (string_eval('<<dimensions>>','list')) {
      $return_string .= "VARIABLE <dynamic_force_c_$species"."[l=$l]> '<dynamic_force_c_$species"."[l=$l]>+<phi_bounded_$species>*<gravity[l=$l]>*<rho_$species>'\n";
    }
    $return_string .= "VARIABLE <dynamic_force_f_$species> '<dynamic_force_f_$species>+<phi_f_bounded_$species>*dot(<gravity[l=:]>,<facedxunit[l=:]>)*<rho_$species>'\n"
  }
  return $return_string;
}}

